{{# partial "content"}}
<div class="row">
	<div class="col-md-12">
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<h3>Consultas</h3>
		<div class="col-md-12">
			<ul class="list-group">
				<li class="list-group-item">
					<form  action="{{linkConsultas}}" method="post" role="form">
						<span class="btn" id="basic-addon1">Filtro:</span>
						<select class="btn btn-primary" name="filtro_nombre">
							{{# filtros}}
							<option  value="{{this}}">{{this}}</option>											
							{{/filtros}}
						</select>
						<span class="btn" id="basic-addon1">Ordenar Por:</span>
						<select class="btn btn-primary" name="ordenador_nombre">
							{{# ordenadores}}
							<option  value="{{this}}">{{this}}</option>											
							{{/ordenadores}}
						</select>
						<div class="input-group">
							<span class="input-group-addon">Nombre</span><input type="text" name="receta_nombre" class="form-control" placeholder="Nombre">
						</div>
						<div class="input-group">
							<span class="input-group-addon">Dificultad</span>
							<select class="btn btn-primary" name="receta_dificultad">
								<option  value="NA">N/A</option>		
								<option  value="DIFICIL">Dificil</option>			
								<option  value="MEDIA">Media</option>			
								<option  value="FACIL">Facil</option>		
							</select>
							<span class="input-group-addon">Temporada</span>
							<select class="btn btn-primary" name="receta_temporada">
								<option  value="N/A">N/A</option>		
								{{# temporadas}}
								<option  value="{{this}}">{{this}}</option>								
								{{/temporadas}}
							</select>
						</div>
						<div class="input-group">
							<span class="input-group-addon">Calorías Mínimas</span><input type="number" name="receta_caloria_min" class="form-control" min="0">
							<span class="input-group-addon">Calorías Máximas</span><input type="number" name="receta_caloria_max" class="form-control" min="0">
						</div>
						<button type="submit" class="btn btn-default">Realizar Consulta</button>
					</form>
				</li>
				<li class="list-group-item">					
					<div class="text-center">
						<div class="table-responsive">
							<table class="table table-stripped">
								<thead style="text-align:center">
									<tr>
										<th class="text-center">Nombre</th>
										<th class="text-center">Calorías</th>
										<th class="text-center">Dificultad</th>
										<th class="text-center">Temporada</th>
										<th class="text-center">Publica</th>
										<th class="text-center">Dueño</th>
									</tr>
								</thead>
								<tbody style="text-align:center">
									<tr>
										{{# consultadas}}
										<tr>
											<td><a href="/recetas/{{nombre}}">{{nombre}}</a></td>
											<td>{{calorias}}</td>
											<td>{{dificultad}}</td>
											<td>{{temporada.nombre}}</td>
											<td>{{publica}}</td>
											<td>DUEÑO?</td>
										</tr>
										{{/consultadas}}
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
</div>
{{/partial}}
{{> base.hbs}}
